{
  "name": "e-shop-backend",
  "version": "1.0.0",
  "description": "A platform for management of stock and sales.",
  "main": "index.js",
  "scripts": {
    "dev": "SET NODE_ENV=development && babel-watch src/index.js",
    "production": "npm run db:migrate && NODE_ENV=production babel-watch src/index.js",
    "lint": "eslint . --ext .js",
    "db:refresh": "NODE_ENV=production && npx sequelize db:migrate:undo:all && npx sequelize db:migrate && npx sequelize db:seed:all",
    "db:seed": "NODE_ENV=production && npx sequelize db:seed:all",
    "db:migrate": "NODE_ENV=production && npx sequelize db:migrate",
    "migrate": "NODE_ENV=test npx sequelize db:migrate",
    "rollback": " cross-env NODE_ENV=test npx sequelize db:migrate:undo:all",
    "seed": " cross-env NODE_ENV=test npx sequelize db:seed:all",
    "test": "npm run rollback && npm run migrate && npm run seed &&  npm run test-suite",
    "test-suite": "SET NODE_ENV=test && nyc --reporter=html --reporter=text mocha src/tests/index.spec.js --require @babel/register --timeout 20000 --exit",
    "coveralls": "nyc report --reporter=text-lcov| coveralls",
    "localbuild": "babel src --out-dir lib --copy-files --source-maps --watch"
  },
  "nyc": {
    "exclude": [
      "**/**/**/tests",
      "**/**/**/Utils",
      "**/**/**/index.js",
      "**/**/**/**/config"
    ]
  },
  "author": "roger sabin",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "@hapi/joi": "^17.1.1",
    "@hapi/joi-date": "^2.0.1",
    "babel-eslint": "^8.2.6",
    "babel-watch": "^7.3.0",
    "bcrypt": "^5.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cloudinary": "^1.23.0",
    "connect-multiparty": "^2.2.0",
    "cors": "^2.8.5",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "errorhandler": "^1.5.1",
    "eslint": "^4.19.1",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-session": "^1.17.1",
    "ip": "^1.1.5",
    "method-override": "^3.0.0",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.17",
    "p-iteration": "^1.1.8",
    "path": "^0.12.7",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.22.3",
    "sequelize-cli": "^5.5.1",
    "underscore": "^1.12.0"
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "husky": "^4.3.8",
    "mocha": "^7.2.0",
    "nyc": "^15.1.0"
  }
}
